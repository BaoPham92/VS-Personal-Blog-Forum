	
<h3><%= @post.title %></h3>

<strong> Created by <%= @post.user.email %> <%= time_ago_in_words(@post.created_at) %></strong><br><br>

<p><%= @post.description %></p>

<h4>Comments:</h4>
	<%= render @post.comments %>

<h4>Reply to post:</h4>
	<%= render 'comments/form' %>

<%= link_to "Back", root_path, class: "btn btn-default" %>

	<%= link_to "Edit", edit_post_path(@post), class: "btn btn-default" %>

		<%= link_to "Delete", post_path(@post), class: "btn btn-default", method: :delete, data: { confirm: "Do you want to delete this content?"} %>

		