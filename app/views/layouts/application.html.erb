<!DOCTYPE html>
<html>
  <head>
    <title>VSForums</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


  <div class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <%= link_to "VSForums", root_path, class: "navbar-brand" %>
      </div>

      <ul class="nav navbar-nav">
        <li><%= link_to "Sign Up", new_user_registration_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, data: { confirm: "Signing out will close all sessions, including material for the site."} %></li>
          <% else %>
          <li><%= link_to "Sign In", new_user_session_path %></li> 
        <% end %>
      </ul>

      <% if user_signed_in? %>
      <p><%= link_to "Create New Post", new_post_path, class: "navbar-right navbar-text navbar-link" %></p>
      <% end %>

    </div>
  </div>

  <!-- Devise paste -->
         <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
  <!-- Devise paste -->
  
    <%= yield %>


  </div>  
  </body>
</html>
